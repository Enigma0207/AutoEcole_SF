{% extends 'base.html.twig' %}

{% block title %}Créneaux{% endblock %}

{% block body %}
{% if 'ROLE_ADMIN' not in app.user.roles %}
        <div class="alert alert-danger" role="alert">
            Vous n'avez pas les droits d'accéder à cette page.
        </div>
{% else %}
   <div class="showCreneaux" >
        <h4 >Détail Creneau</h4>
        <table >
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ creneaux.id }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ creneaux.date ? creneaux.date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Moniteur</th>
                    <td>{{ creneaux.user.firstname }}</td>
                </tr>
           
                <tr>
                    <th>Permis Type</th>
                    <td>{{ creneaux.permis.type }}</td>
                </tr>
                <tr>
                    <th>IsAvailable</th>
                    <td>{{ creneaux.isAvailable ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table> 
         <div class="btnShow">
            <a href="{{ path('app_creneaux_index') }}"><span>&#128412;</span>List</a>
            <a href="{{ path('app_creneaux_edit', {'id': creneaux.id}) }}">Edit</a>
        </div>
        {{ include('creneaux/_delete_form.html.twig') }}
  </div>
{% endblock %}
{% endblock %}
